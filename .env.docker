# =================================
# Docker Deployment Environment Variables
# =================================

# Database Configuration (Docker internal network)
DATABASE_URL=postgresql://postgres:test_password@database:5432/rise_of_founders_dev
POSTGRES_PASSWORD=test_password

# Application Configuration
NODE_ENV=production
PORT=3001
API_VERSION=v1

# Security Configuration
JWT_SECRET=test_jwt_secret_for_development_32chars
JWT_EXPIRE_TIME=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=test_session_secret_for_dev_32chars
ENCRYPTION_KEY=12345678901234567890123456789012

# CORS and Security
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
TRUSTED_PROXIES=
SECURE_COOKIES=false
COOKIE_DOMAIN=

# Honeycomb Protocol Configuration
HONEYCOMB_API_KEY=your_honeycomb_api_key
HONEYCOMB_PROJECT_ID=your_honeycomb_project_id
HONEYCOMB_ENVIRONMENT=development

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_HONEYCOMB_PROJECT_ID=your-project-id-here
NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Rate Limiting Configuration (Disabled for demo)
ENABLE_RATE_LIMITING=false

# Monitoring and Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_PVP=true
ENABLE_TEAMS=true
ENABLE_SPONSORS=true
ENABLE_MENTORS=true
ENABLE_AI_AGREEMENTS=true
ENABLE_REGISTRATION=true
ENABLE_HONEYCOMB=true
MAINTENANCE_MODE=false

# Development Configuration
MOCK_EXTERNAL_SERVICES=true
ENABLE_API_DOCS=true