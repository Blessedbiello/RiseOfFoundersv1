# =================================
# Rise of Founders Backend Environment Variables
# =================================

# Application Configuration
NODE_ENV=development
PORT=8000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rise_of_founders_dev
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT_MS=5000

# Security Configuration (IMPORTANT: Use strong, unique values in production)
JWT_SECRET=your-super-secure-jwt-secret-that-is-at-least-32-characters-long
JWT_EXPIRE_TIME=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secure-session-secret-that-is-at-least-32-characters-long
ENCRYPTION_KEY=your32characterencryptionkeyhere

# CORS and Security
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
TRUSTED_PROXIES=
SECURE_COOKIES=false
COOKIE_DOMAIN=

# Honeycomb Protocol Configuration
HONEYCOMB_API_KEY=your_honeycomb_api_key
HONEYCOMB_PROJECT_ID=your_honeycomb_project_id
HONEYCOMB_ENVIRONMENT=development

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
GITHUB_CALLBACK_URL=http://localhost:8000/auth/github/callback

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@riseoffounders.com

# Rate Limiting Configuration
REDIS_URL=redis://localhost:6379
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_RATE_LIMITING=true

# Monitoring and Logging
LOG_LEVEL=debug
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key

# Performance Configuration
REQUEST_TIMEOUT_MS=30000

# Feature Flags
ENABLE_PVP=true
ENABLE_TEAMS=true
ENABLE_SPONSORS=true
ENABLE_MENTORS=true
ENABLE_AI_AGREEMENTS=true
ENABLE_REGISTRATION=true
ENABLE_HONEYCOMB=true
MAINTENANCE_MODE=false

# Development Configuration
MOCK_EXTERNAL_SERVICES=false
ENABLE_API_DOCS=true

# Webhook URLs (Optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Third-party APIs (Optional)
COINGECKO_API_KEY=your_coingecko_api_key
CHAINLINK_API_KEY=your_chainlink_api_key

# =================================
# Production Security Notes:
# =================================
# 1. Generate strong, unique secrets for JWT_SECRET, SESSION_SECRET, and ENCRYPTION_KEY
# 2. Use environment-specific database URLs
# 3. Set SECURE_COOKIES=true in production
# 4. Configure TRUSTED_PROXIES if behind a reverse proxy
# 5. Set appropriate CORS origins
# 6. Enable rate limiting in production
# 7. Configure proper logging levels
# 8. Set up monitoring with Sentry/Datadog
# 9. Use secure cloud storage (S3) for file uploads
# 10. Configure proper email service for notifications